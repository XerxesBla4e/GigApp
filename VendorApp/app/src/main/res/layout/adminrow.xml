<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/adminimg"
            android:layout_width="86dp"
            android:layout_height="86dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/orgname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/adminimg"
            android:hint="@string/shopname"
            android:textColor="@color/greyish"
            android:textSize="25sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orgname"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/adminimg"
            android:hint="@string/location"
            android:textColor="@color/greyish"
            android:textSize="25sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/openclose"
            android:layout_width="109dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="55dp"
            android:layout_toEndOf="@+id/location"
            android:layout_toRightOf="@+id/location"
            android:background="@drawable/closebg"
            android:gravity="center"
            android:hint="closed"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/imglocation"
            android:layout_width="31dp"
            android:layout_height="27dp"
            android:background="@drawable/active" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>