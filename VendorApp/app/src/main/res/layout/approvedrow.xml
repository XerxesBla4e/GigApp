<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:elevation="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="@string/candidatename"
            android:textColor="@color/greyish"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cltstatus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/candidate_status"
            android:textColor="@color/greyish"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cltstatus1"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pay"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="34dp"
                android:src="@drawable/paysvg"
                android:tooltipText="Pay" />

            <ImageView
                android:id="@+id/delete1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="270dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/delete"
                android:tooltipText="Delete" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>